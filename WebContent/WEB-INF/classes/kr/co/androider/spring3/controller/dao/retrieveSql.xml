<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
	"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<!-- namespace에 interface로 정의된 DAO를 정확히 명시해주어야 한다 -->
<mapper namespace="kr.co.androider.spring3.controller.dao.AppDao">

	<resultMap id="appResult" type="AppBean">
		<result property="appId" column ="APP_ID"/>
		<result property="appPkgName" column ="APP_PKG_NAME"/>
		<result property="appSize" column ="APP_SIZE"/>
	</resultMap>

	<select id="retrieveApp" parameterType="String" resultMap="appResult">
		<![CDATA[
		SELECT APP_ID, APP_PKG_NAME, APP_SIZE FROM TB_CPM_APP_BAS WHERE APP_ID IN ('CASA1000000000989', 'CASA1000000000990')
		]]>
	</select>

</mapper>